<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="196" height="140" initialize="init()">
	<mx:Script>
		<![CDATA[
			public function init():void
			{
				
				var i:int = 0;
				txtName.text = data.Name;
				
				if (data.Rank == 0)
					bxRank.visible = false;	
				else
					txtRank.text = new String(data.Rank).substr(0,4);
				
				if(data.Alias==null || data.Alias.length == 0)
					bxAlias.visible = false;
				else
				{
					for(i= 0;i<data.Alias.length;++i)
					{
						if(i !=0)
							txtAlias.text += ",";
						txtAlias.text += data.Alias[i];										
					}
				}
					
				if (data.Stars==null || data.Stars.length == 0)
					txtStars.text = "双击节点查看..."
				else
				{
					for(i = 0;i<data.Stars.length;++i)
					{
						if(i !=0)
							txtStars.text += "\n";
						txtStars.text += data.Stars[i].Role+ " "+ data.Stars[i].Star.Name;
																
					}
				}
		
			}
		]]>
	</mx:Script>
	<mx:VBox x="0" y="0" height="100%" width="100%" id="bxMovie">
		<mx:HBox width="100%" id="bxName">
			<mx:Text text="片名" width="50"/>
			<mx:Text id="txtName" width="100%"/>
		</mx:HBox>
		<mx:HBox width="100%" id="bxAlias"  includeInLayout="{bxAlias.visible}">
			<mx:Text text="别名" width="50"/>
			<mx:Text id="txtAlias" width="100%"/>
		</mx:HBox>
		<mx:HBox width="100%" id="bxStars">
			<mx:Text text="明星" width="50"/>
			<mx:Text id="txtStars" width="100%"/>
		</mx:HBox>
		<mx:HBox width="100%" id="bxRank"  includeInLayout="{bxRank.visible}">
			<mx:Text text="分数" width="50"/>
			<mx:Text id="txtRank" width="100%"/>
		</mx:HBox>
	</mx:VBox>
</mx:Module>
