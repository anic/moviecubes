	<mx:Style source="MyTheme.css" /> 
   <mx:Glow id="effectAdd" duration="3000" 
        alphaFrom="1.0" alphaTo="1.0" 
        blurXFrom="0.0" blurXTo="50.0" 
        blurYFrom="0.0" blurYTo="50.0" 
        color="{data.color}" target="{this.circle}"/>
        
    
	<local:Circle id="circle" width="100%" height="100%" color="{data.color}"/>

	<mx:Text id="txtName" text="{data.name}" textAlign="center" styleName="text" fontSize="15" 
		scaleX="{app.scaleFactor}" scaleY="{app.scaleFactor}" color="#FFFFFF"
		 height="32" width="100%" horizontalCenter="0" verticalCenter="0" mouseChildren="false"/>
		
		
	<mx:Script>
		<![CDATA[
			import mx.core.UIComponent;
			import mx.containers.VBox;
			import mx.controls.TextArea;
			import mx.core.Application;
			
			private function init():void
			{
				this.effectAdd.play();
				
				//设置合适的字体大小
				if (data.name.length>=5)
					txtName.setStyle("fontSize",14);
					
								this.addEventListener(MouseEvent.ROLL_OVER,this.onSelected);
				this.addEventListener(MouseEvent.ROLL_OUT,this.onNotSelected);

				(data as RelationItem).setOnUpdate(this.onDataUpdate);
				onDataUpdate();
				
			}
			
			private function onSelected(event:MouseEvent):void
			{
				this.btnLook.setVisible2(true);
				this.btnSearch.setVisible2(true);
			}
			
			private function onNotSelected(event:MouseEvent):void
			{
				
				this.btnLook.setVisible2(false);
				this.btnSearch.setVisible2(false);
			}
			
			private function onDataUpdate():void
			{
				var offset:int = data.rank*10;
				this.circle.unscaledRadius = (this.width/2 - 20 - offset)>10? (this.width/2 - 20 - offset):10 ;
				
				RelationGraph(Application.application).tipMan.removeBubbleTip(this.circle);
				
				if (data.isStar)
				{
					var starBox:StarBox = new StarBox();
					starBox.data = data.data;
					RelationGraph(Application.application).tipMan.createMyBubbleTip(this,starBox,null,null);
				}
				else
				{
					var movieBox:MovieBox = new MovieBox();
					movieBox.data = data.data;
					RelationGraph(Application.application).tipMan.createMyBubbleTip(this,movieBox,null,null);
				}
			}
			
			
			[Bindable]
			private var app: RelationGraph = RelationGraph(Application.application);
			
			public function doubleClick(event: Event): void {
				searchTA(false);
			}
			
			public function searchTA(clearGraph:Boolean):void
			{
				if (data.isStar)
				{
					RelationGraph(Application.application).loadStar(data.name,clearGraph);	
				}
				else
				{
					RelationGraph(Application.application).loadMovie(data.name,clearGraph);
				}
			}
		]]>
	</mx:Script>
	<local:ToolButton ImgSrc="myimage/Document.png"  x="41" toolTip="看TA" id="btnLook" click="{navigateToURL(new URLRequest('http://www.g.cn/search?q='+data.name),'_blank');}" bottom="10" width="30" alpha="0"  height="30"/>
	<local:ToolButton ImgSrc="myimage/ArrowRight.png" x="70" toolTip="查TA" id="btnSearch" click="{this.searchTA(true);}" bottom="10" fontSize="10" width="30" alpha="0" height="30"/>
	
	
</mx:Canvas>
